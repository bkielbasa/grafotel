{
  "dashboard": {
    "id": null,
    "title": "Ad-Tech Microservices Overview",
    "tags": ["ad-tech", "microservices", "opentelemetry"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(ad_requests_total[5m])",
            "legendFormat": "Ad Service"
          },
          {
            "expr": "rate(bid_requests_total[5m])",
            "legendFormat": "Bidding Service"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Response Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ad_request_duration_seconds_bucket[5m]))",
            "legendFormat": "Ad Service P95"
          },
          {
            "expr": "histogram_quantile(0.95, rate(bid_response_time_seconds_bucket[5m]))",
            "legendFormat": "Bidding Service P95"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Bid Amount Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "bid_amount_dollars_bucket",
            "legendFormat": "{{ad_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "currencyUSD"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Service Map",
        "type": "nodeGraph",
        "targets": [
          {
            "expr": "group by(service_name) (rate(span_requests_total[5m]))",
            "legendFormat": "{{service_name}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(ad_requests_total{status=\"error\"}[5m]) / rate(ad_requests_total[5m]) * 100",
            "legendFormat": "Ad Service Error %"
          },
          {
            "expr": "rate(bid_requests_total{status=\"error\"}[5m]) / rate(bid_requests_total[5m]) * 100",
            "legendFormat": "Bidding Service Error %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
} 